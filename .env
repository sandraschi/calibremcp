# CalibreMCP Environment Configuration
# Copy this file to .env and update with your actual values

# Calibre Server Connection
CALIBRE_SERVER_URL=http://localhost:8080
CALIBRE_USERNAME=sandraschipal@hotmail.com
CALIBRE_PASSWORD=Sec1000cal

# Library Configuration
# Option 1: Set a base path to auto-discover libraries as subdirectories
CALIBRE_BASE_PATH=L:/Multimedia Files/Written Word

# Option 2: Manually specify library paths as JSON
# CALIBRE_LIBRARY_PATHS={"main": "L:/Multimedia Files/Written Word/Main", "it": "L:/Multimedia Files/Written Word/IT", "japanese": "L:/Multimedia Files/Written Word/Japanese", "academic": "L:/Multimedia Files/Written Word/Academic"}

