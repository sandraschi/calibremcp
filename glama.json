{
  "$schema": "https://glama.ai/mcp/schemas/server.json",
  "maintainers": ["sandraschi"],
  "name": "calibre-mcp",
  "description": "FastMCP 2.13+ server for Calibre e-book library management. 18 portmanteau tools for library management, search, metadata, and comment operations. Beta status.",
  "type": "mcp_server",
  "status": "beta",
  "framework": "FastMCP 2.13+",
  "tools": 18,
  "transport": ["stdio"],
  "keywords": [
    "calibre",
    "ebooks",
    "library-management",
    "books",
    "metadata",
    "mcp-server",
    "fastmcp",
    "portmanteau"
  ],
  "features": {
    "library_management": {
      "enabled": true,
      "auto_load": true
    },
    "search": {
      "enabled": true,
      "verbs": ["search", "list", "find", "query", "get"]
    },
    "metadata_management": {
      "enabled": true
    },
    "comment_management": {
      "enabled": true,
      "operations": "CRUD"
    }
  }
}

